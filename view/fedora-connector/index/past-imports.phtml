            <td>
                <?php $args = $job->args();
                echo $args['container_uri'];
                ?>
            </td>
            <td><?php echo $escape($this->i18n()->dateFormat($job->started())); ?></td>
            <td><?php echo $undone ? $this->translate('Undone') : $job->status(); ?></td>
